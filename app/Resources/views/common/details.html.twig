{% extends 'base.html.twig' %}
{% block body %}
    <div class="row margin-top-50" ng-app="app" ng-controller="MapCtrl as vm">
        <h2 class="page-header">{{estab.name}}</h2>
        <div class="col-md-12">
            <div class="">
                <ul>
                    <li class="list-group-item">
                        <strong>Type:</strong>
                        {{estab.type}}</li>
                    <li class="list-group-item">
                        <strong>Address:</strong>
                        {{estab.address}}</li>
                    <li class="list-group-item">
                        <a href="/common/gallery/{{estab.id}}">
                            <span class="glyphicon glyphicon-picture"></span>
                            <strong>Gallery</strong>
                        </a>
                    </li>
                </ul>
            </div>          
        </div>

        <div class="col-md-12">
            <ng-map zoom="14" center="{{estab.latitude}},{{estab.longitude}}" class="height-350">
                <marker position="[{{estab.latitude}},{{estab.longitude}}]" title="{{estab.name}}" animation="Animation.BOUNCE"></marker>
            </ng-map>
        </div>
    </div>

{% endblock %}
