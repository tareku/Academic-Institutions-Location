{% extends 'base.html.twig' %}

{% block body %}
    <div class="row" ng-app="app" ng-controller="MapCtrl as vm">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="col-md-12 margin-top-100">
                {% verbatim %}
                    <ng-map zoom="{{vm.zoom}}" center="[{{vm.clat}},{{vm.clng}}]" class="height-550">
                    {% endverbatim %}
                    {% for estab in estabs %}
                        <marker position="[{{estab.latitude}},{{estab.longitude}}]" title="{{estab.name}}" animation="Animation.BOUNCE"></marker>
                    {% endfor %}
                    </ng-map>                    
                {% else %}
                <div class="margin-top-100">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 class="header-page">
                            MISIE Academic Institutions Localisation
                        </h2>
                    </div>
                    <div class="col-md-6 col-md-offset-2">
                        <img src="https://scontent-cdg2-1.xx.fbcdn.net/v/t34.0-12/12980369_1137390629638349_2125880167_n.png?oh=1bf003a94483b4bfd2b7f13c10d27ab5&oe=572C2029">
                    </div>
                </div>
            {% endif %}
        </div>

    {% endblock %}

    {% block stylesheets %}{% endblock %}
